extend ../../layouts/default
include ../../mixins/alert

block main 
    .app-content 
        .app-content-header 
            .app-content-text 
                h1.headerText Account 
            .dark-mode-toggle
                i.bi.bi-moon-fill
            a.btn.btn-success(href=`${prefixAdmin}/account/create`) Create Account
        .app-content-action 
        .app-content-table 
            + alert-success(3000)
            + alert-error(3000)
            table.table
                thead
                    tr
                    th(scope='col') #
                    th(scope='col') Avatar
                    th(scope='col') Full Name 
                    th(scope='col') Email 
                    th(scope='col') Password
                    th(scope='col') Role 
                    th(scope='col')
                    th(scope='col')
                    th(scope='col')
                tbody
                    each account, index in accounts 
                        tr
                        th(scope='row') #{index + 1}
                        td 
                            img(
                                src=account.avatar
                                alt=account.fullName
                                width="100px"
                                height="auto"
                                )
                        td #{account.fullName}
                        td #{account.email}
                        td #{account.password}
                        if(account.role)
                            td #{account.role.title}
                        else 
                            td None
                        td
                            a.btn.btn-secondary.edit-btn(href=`${prefixAdmin}/account/detail/${account.id}`) Detail
                        td 
                            a.btn.btn-warning.edit-btn(href=`${prefixAdmin}/account/edit/${account.id}`) Edit
                        td
                            .btn.btn-danger(type='button', data-bs-toggle='modal', data-bs-target='#deleteOneModal', data-bs-id=account.id) Delete
                                    .modal.fade(tabindex='-1', aria-labelledby='deleteOneModalLabel', aria-hidden='true', id="deleteOneModal", data-bs-theme="dark")
                                        .modal-dialog
                                            .modal-content
                                                .modal-header
                                                    h1#deleteOneModalLabel.modal-title.fs-5.text-light Alert
                                                    button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
                                                .modal-body.text-light You are soft deleting this account. You can restore it !
                                                .modal-footer
                                                    button.btn.btn-secondary(type='button', data-bs-dismiss='modal') Close
                                                    button.btn.btn-danger(type='button' data-bs-id=account.id id='delete-btn') Delete
    script(src="/admin/script/account/index.js") 